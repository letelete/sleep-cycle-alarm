<resources>

    <!-- GLOBAL STYLES -->

    <style name="global_font_regular">
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="global_icons_style">
        <item name="android:layout_width">@dimen/iconsSize</item>
        <item name="android:layout_height">@dimen/iconsSize</item>
        <item name="android:layout_marginEnd">@dimen/extra_large_margin_size</item>
        <item name="android:layout_marginStart">@dimen/small_margin_size</item>
        <item name="android:layout_marginTop">@dimen/normal_margin_size</item>
        <item name="android:layout_marginBottom">@dimen/normal_margin_size</item>
    </style>

    <style name="alert_dialog_style" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:background">@color/color_primary_dark</item>
    </style>

    <!-- ATTRIBUTE STYLES -->

    <style name="header_app_name_text">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_high_emphasis</item>
    </style>

    <style name="kebab_menu_style">
    </style>

    <style name="toolbar_style" parent="Base.V7.Widget.AppCompat.Toolbar">
        <item name="android:background">@color/transparent</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColorSecondary">@color/text_high_emphasis</item>
    </style>

    <style name="empty_list_image_style">
        <item name="android:layout_margin">@dimen/normal_margin_size</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:cropToPadding">false</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="empty_list_title_style" parent="global_font_regular">
        <item name="android:textSize">@dimen/extra_large_text_size</item>
        <item name="android:layout_margin">@dimen/small_margin_size</item>
        <item name="android:textColor">@color/text_high_emphasis</item>
    </style>

    <style name="empty_list_summary_style" parent="global_font_regular">
        <item name="android:layout_margin">@dimen/small_margin_size</item>
        <item name="android:textColor">@color/text_medium_emphasis</item>
    </style>

    <style name="title_info_text" parent="global_font_regular">
        <item name="android:textSize">@dimen/extra_large_text_size</item>
        <item name="android:layout_marginBottom">@dimen/small_margin_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/text_on_card_info</item>
    </style>

    <style name="content_info_text" parent="global_font_regular">
        <item name="android:textSize">@dimen/title</item>
        <item name="android:layout_marginBottom">@dimen/normal_margin_size</item>
        <item name="android:layout_marginTop">@dimen/normal_margin_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/text_on_card_info</item>
    </style>

    <style name="info_card_style">
        <item name="cardCornerRadius">@dimen/corner_radius_size</item>
        <item name="cardElevation">@dimen/elevation_size</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="contentPadding">@dimen/content_padding_info_board</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginTop">@dimen/normal_margin_size</item>
        <item name="android:layout_marginLeft">@dimen/normal_margin_size</item>
        <item name="android:layout_marginRight">@dimen/normal_margin_size</item>
        <item name="cardBackgroundColor">@color/color_accent</item>
    </style>

    <style name="list_helper_text" parent="global_font_regular">
        <item name="android:textSize">@dimen/title</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/text_medium_emphasis</item>
    </style>

    <style name="title_in_list_text" parent="global_font_regular">
        <item name="android:textSize">@dimen/extra_large_text_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/medium_margin_size</item>
        <item name="android:layout_marginTop">@dimen/normal_margin_size</item>
        <item name="android:textColor">@color/text_high_emphasis</item>
        <item name="android:text">@string/list_element_title_changeable</item>
    </style>

    <style name="subtitle_in_list_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text_medium_emphasis</item>
        <item name="android:text">@string/list_element_summary_changeable</item>
    </style>

    <style name="list_style">
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">@dimen/normal_margin_size</item>
        <item name="android:layout_marginTop">@dimen/normal_margin_size</item>
        <item name="android:layout_marginBottom">@dimen/normal_margin_size</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
    </style>


    <style name="list_card_style" parent="info_card_style">
        <item name="android:layout_marginBottom">@dimen/medium_margin_size</item>
        <item name="android:layout_marginEnd">@dimen/normal_margin_size</item>
        <item name="android:layout_marginStart">@dimen/normal_margin_size</item>
        <item name="android:layout_marginTop">@dimen/medium_margin_size</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:backgroundTint">@color/color_primary</item>
    </style>

    <style name="bottom_navigation_text" parent="global_font_regular">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:textColor">@color/color_accent</item>
    </style>

    <style name="app_background_style">
        <item name="android:background">@color/color_primary_dark</item>
    </style>

    <style name="floating_action_button_style" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_width">@dimen/fabWidth</item>
        <item name="android:layout_height">@dimen/fabHeight</item>
        <item name="android:background">@drawable/button_fab_extended</item>
        <item name="android:drawableStart">@drawable/ic_add</item>
        <item name="android:textColor">@color/icons_active_focused_negative</item>
        <item name="android:text">@string/wake_up_at_set_hour_button</item>
        <item name="android:paddingStart">@dimen/medium_margin_size</item>
        <item name="android:paddingEnd">@dimen/medium_margin_size</item>
        <item name="android:layout_marginBottom">@dimen/large_margin_size</item>
        <item name="android:layout_marginTop">@dimen/extra_large_margin_size</item>
    </style>

    <style name="close_activity_button_style">
        <item name="android:layout_width">@dimen/circleButtonsBackgroundSize</item>
        <item name="android:layout_height">@dimen/circleButtonsBackgroundSize</item>
        <item name="android:layout_marginStart">@dimen/small_margin_size</item>
        <item name="android:layout_marginTop">@dimen/small_margin_size</item>
        <item name="android:background">@drawable/button_close_activity</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="icons_background">
        <item name="android:background">@color/color_primary_dark</item>
    </style>

    <style name="set_alarm_icon" parent="global_icons_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:src">@drawable/shape_alarm_add</item>
    </style>

    <style name="access_alarm_icon" parent="global_icons_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:src">@drawable/shape_alarm_access</item>
    </style>

</resources>